pipeline {
    agent any

    environment {
        NEW_VERSION = '1.3.0'
    }
    stages {
        stage('build') {
            steps{
            echo 'Building code'
            echo "version: ${NEW_VERSION}"
            }

        }
        stage('test') {
            steps{
            echo 'testing code'
            echo "version: ${NEW_VERSION}"
            }

        }
        stage('deploy') {
           steps {
            echo 'deploying code'
            echo "version: ${NEW_VERSION}"
            }

        }
    }
}